{% extends 'base.html.twig' %}

{% block title %}Agence Lorem Ipsum{% endblock %}

{% block body %}    
    <div class="jumbotron text-center">
        <h1>Agence Lorem Ipsum</h1>
        <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Impedit id maiores possimus accusamus veritatis cupiditate.</p>    
    </div>
    <div class="container">
        <h2>Les derniers biens</h2>
        <div class="row flex">
            {% for property in properties %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('preperty_show', {'id': property.id }) }}">
                                    {{ property.title }}
                                </a>
                            </h5>
                            <p class="card-text">
                                {{ property.city }} ( {{ property.postalCode }} )
                            </p>
                            <div class="text-primary">
                                {{ property.price | number_format(0,'',' ')}} $
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}